<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.MenuFragment">

        <View
            android:background="@color/colorPrimary"
            android:id="@+id/rippleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TableLayout
            android:id="@+id/menuLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:stretchColumns="*" >

                <TableRow
                    android:id="@+id/driverButton"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                                <TableRow
                                    android:layout_weight="10"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            android:id="@+id/driverIcon"
                                            app:materialIcon="car"
                                            app:materialIconColor="@color/colorFont"
                                            android:scaleType="center"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"
                                            android:layout_marginBottom="-20dp"/>
                                </TableRow>
                                <TableRow
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <TextView
                                        android:text="DRIVER"
                                        android:id="@+id/driverText"
                                        fontPath="fonts/Roboto-Thin.ttf"
                                        tools:ignore="MissingPrefix"
                                        android:textColor="@color/WHITE"
                                        android:textAlignment="center"
                                        android:layout_height="match_parent"
                                        android:layout_width="match_parent"
                                        android:gravity="top"
                                        android:textSize="30dp"
                                        />
                                </TableRow>
                        </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLogo"/>

                <TableRow
                    android:id="@+id/iceButton"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                                <TableRow
                                    android:layout_weight="10"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            app:materialIcon="contact_mail"
                                            app:materialIconColor="@color/colorFont"
                                            android:scaleType="center"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"
                                            android:layout_marginBottom="-20dp" />
                                </TableRow>
                                <TableRow
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <TextView android:text="ICE"
                                              android:textColor="@color/WHITE"
                                              android:textAlignment="center"
                                              android:layout_height="match_parent"
                                              android:layout_width="match_parent"
                                              android:gravity="top"
                                              fontPath="fonts/Roboto-Thin.ttf"
                                              tools:ignore="MissingPrefix"
                                              android:textSize="30dp"
                                        />
                                </TableRow>
                        </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLogo"/>

                <TableRow
                    android:id="@+id/passengersButton"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                                <TableRow
                                    android:layout_weight="10"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            app:materialIcon="account_multiple"
                                            app:materialIconColor="@color/colorFont"
                                            android:scaleType="center"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"
                                            android:layout_marginBottom="-20dp" />
                                </TableRow>
                                <TableRow
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <TextView android:text="PASSENGERS"
                                              android:textColor="@color/WHITE"
                                              android:textAlignment="center"
                                              fontPath="fonts/Roboto-Thin.ttf"
                                              tools:ignore="MissingPrefix"
                                              android:layout_height="match_parent"
                                              android:layout_width="match_parent"
                                              android:gravity="top"
                                              android:textSize="30dp"
                                        />
                                </TableRow>
                        </LinearLayout>
                </TableRow>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLogo"/>

                <TableRow
                    android:id="@+id/triggerButton"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent">
                                <TableRow
                                    android:layout_weight="10"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <net.steamcrafted.materialiconlib.MaterialIconView
                                            app:materialIcon="play"
                                            app:materialIconColor="@color/colorFont"
                                            android:scaleType="center"
                                            android:layout_height="match_parent"
                                            android:layout_width="match_parent"
                                            android:layout_marginBottom="-20dp" />
                                </TableRow>
                                <TableRow
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent">
                                        <TextView
                                            android:text="START"
                                              android:id="@+id/triggerTextView"
                                              android:textColor="@color/WHITE"
                                              android:textAlignment="center"
                                              fontPath="fonts/Roboto-ThinItalic.ttf"
                                              tools:ignore="MissingPrefix"
                                              android:layout_height="match_parent"
                                              android:layout_width="match_parent"
                                              android:gravity="top"
                                              android:textSize="30dp"
                                        />
                                </TableRow>
                        </LinearLayout>
                </TableRow>



        </TableLayout>

</FrameLayout>
