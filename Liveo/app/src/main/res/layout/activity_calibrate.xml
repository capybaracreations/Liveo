<?xml version="1.0" encoding="utf-8"?>


<android.support.percent.PercentRelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/calibrateImage"
        android:layout_margin="15dp"
        android:src="@drawable/calibrate"
        android:layerType="software"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_heightPercent="60%"
        app:layout_widthPercent="100%"/>

    <TextView
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%"
        android:layout_below="@id/calibrateImage"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/instructionText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/LIVEO_CALIBRATE_INSTRUCTION"
        android:gravity="center"
        android:textColor="@color/colorFont"
        android:textSize="20sp"
        tools:ignore="MissingPrefix"
        fontPath="fonts/Roboto-Light.ttf"/>
    <net.steamcrafted.materialiconlib.MaterialIconView
        android:layout_below="@id/instructionText"
        app:layout_heightPercent="20%"
        app:layout_widthPercent="100%"
        android:id="@+id/submitButton"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        app:materialIcon="check"
        app:materialIconColor="@color/colorFont"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>


</android.support.percent.PercentRelativeLayout>

