<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorSecondary"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_alignParentTop="true"
        app:layout_heightPercent="25%"
        android:layout_margin="11dp"
        android:orientation="horizontal"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <com.skyfishjy.library.RippleBackground
                android:layout_weight="1"
                android:id="@+id/heartRipple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:rb_color="@color/alert"
                app:rb_radius="32dp"
                app:rb_rippleAmount="1"
                app:rb_duration="2000"
                app:rb_scale="3">
                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@drawable/heart"
                    android:layout_width="match_parent"
                    android:layout_height="120dp" />
                <TextView
                    android:id="@+id/heartText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    fontPath="fonts/Roboto-Bold.ttf"
                    tools:ignore="MissingPrefix"
                    android:textColor="@color/newFont"
                    android:textSize="35sp" />
            </com.skyfishjy.library.RippleBackground>
        <com.github.mikephil.charting.charts.ScatterChart
            android:id="@+id/accelerometerGraph"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


    <FrameLayout
        android:layout_alignParentBottom="true"
        app:layout_heightPercent="75%"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <com.mapbox.mapboxsdk.maps.MapView
            android:background="@color/background"
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            mapbox:access_token="@string/LIVEO_MAPBOX_TOKEN"
            mapbox:style_url="@string/style_mapbox_streets"
            mapbox:logo_enabled="false"
            mapbox:rotate_enabled="false"
            mapbox:compass_enabled="false"
            mapbox:attribution_enabled="false"
            mapbox:zoom="11"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/locationButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="11dp"
            android:scaleType="fitXY"
            android:layout_gravity="right|center_vertical"
            android:src="@android:drawable/ic_menu_mylocation"
            fab:fab_colorNormal="@color/newAccent"
            fab:fab_colorRipple="@color/newAccent"/>
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/stopButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:scaleType="fitXY"
            fab:menu_fab_size="normal"
            android:layout_gravity="bottom|center_horizontal"
            android:src="@drawable/stop"
            fab:fab_colorNormal="@color/disabled"
            fab:fab_colorRipple="@color/disabled"/>
    </FrameLayout>


</android.support.percent.PercentRelativeLayout>


