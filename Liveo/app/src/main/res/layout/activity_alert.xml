<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:fbutton="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary">

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:textColor="@color/newFont"
            fontPath="fonts/Roboto-Bold.ttf"
            tools:ignore="MissingPrefix"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WE ARE GETTING HELP"/>
        <me.itangqi.waveloadingview.WaveLoadingView
            android:layout_weight="1"
            android:id="@+id/progressBar"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:wlv_borderColor="@color/colorFont"
            app:wlv_borderWidth="3dp"
            app:wlv_progressValue="100"
            app:wlv_shapeType="circle"
            app:wlv_titleCenter="Center Title"
            app:wlv_titleCenterColor="@color/colorFont"
            app:wlv_titleCenterSize="24sp"
            app:wlv_waveAmplitude="70"
            android:layout_margin="24dp"
            app:wlv_waveColor="@color/alert"/>
        <info.hoang8f.widget.FButton
            android:id="@+id/safeButton"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:layout_margin="24dp"
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fbutton:buttonColor="@color/colorSecondary"
            fbutton:shadowColor="@color/colorAccent"
            fbutton:shadowEnabled="true"
            android:text="I'M SAFE"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
        />
    </LinearLayout>


</RelativeLayout>
