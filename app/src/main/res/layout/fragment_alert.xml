<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:fbutton="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

    <android.support.v7.widget.CardView
        android:id="@+id/alertCard"
        android:background="#ffffff"
        android:layout_margin="11dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_heightPercent="70%"
        app:layout_widthPercent="100%"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="4dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:contentPadding="0dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:textColor="@color/newFont"
                fontPath="fonts/Roboto-Bold.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WE ARE GETTING HELP"/>
            <me.itangqi.waveloadingview.WaveLoadingView
                android:layout_weight="1"
                android:id="@+id/progressBar"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:wlv_borderColor="@color/newFont"
                app:wlv_progressValue="100"
                app:wlv_shapeType="circle"
                app:wlv_titleCenter="Center Title"
                app:wlv_titleCenterColor="@color/newFont"
                app:wlv_titleCenterSize="24sp"
                app:wlv_waveAmplitude="70"
                android:layout_margin="24dp"
                app:wlv_waveColor="@color/disabled"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <info.hoang8f.widget.FButton
        android:layout_below="@id/alertCard"
        app:layout_heightPercent="30%"
        android:id="@+id/safeButton"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_margin="11dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        fbutton:buttonColor="@color/newAccent"
        fbutton:shadowEnabled="true"
        android:text="I'M SAFE"
        fbutton:shadowHeight="10dp"
        fbutton:cornerRadius="5dp"/>


</android.support.percent.PercentRelativeLayout>
